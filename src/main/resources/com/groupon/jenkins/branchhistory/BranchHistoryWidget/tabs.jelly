<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form" xmlns:i="jelly:fmt">
    <ul class="nav  nav-tabs">
        <j:forEach var="tab" items="${it.tabs}">
        <li role="presentation" class="${tab.active?'active':''}">
            <a href="buildHistory/switchTab/${tab.url}" class="build-history-tab-button" >
                <span class="${tab.font}" style="color:${tab.color}"></span>
                 ${tab.name}
                <j:if test="${tab.removable}">
                    <button class="close closeTab" type="button" onclick="dotCiRemoveTab(event,'${tab.name}')" >Ã—</button>
                </j:if>

            </a>
        </li>
        </j:forEach>
        <li role="presentation"  >
            <a href="#" id="addNewTab"  class="build-history-tab-button" >
                <span class="octicon octicon-plus"></span>
            </a>
        </li>
    </ul>

    <script>

        jQuery( "#addNewTab" ).click(function() {
        bootbox.prompt("Branch Regex", function(result) {
        if(result != null){
           window.location.href = 'addNewBranchTab?branch='+result;
        }
        });
        });

        function dotCiRemoveTab(e,tab){
        e.preventDefault();
        e.stopPropagation();
          window.location.href = 'removeTab?branch='+tab;
        }
    </script>

</j:jelly>