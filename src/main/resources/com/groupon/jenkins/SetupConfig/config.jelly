<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout"
         xmlns:t="/lib/hudson" xmlns:f="/lib/form">
    <f:section title="DotCi Configuration">

                     <f:entry title="MongoDB Host">
                        <f:textbox name="dotci.dbHost" value="${instance.dbHost}"/>
                    </f:entry>
                    
                     <f:entry title="MongoDB Port">
                        <f:textbox name="dotci.dbPort" value="${instance.dbPort}"/>
                    </f:entry>
                    
                     <f:entry title="Db Name">
                        <f:textbox name="dotci.dbName" value="${instance.dbName}"/>
                    </f:entry>

                     <f:entry title="Assigned label for newly created jobs (leave it empty if there is no label restriction)">
                        <f:textbox name="dotci.label" value="${instance.label}"/>
                    </f:entry>
                    
                     <f:entry title="Email Address (This is used as from address for failure/recovery emails)">
                        <f:textbox name="dotci.fromEmailAddress" value="${instance.fromEmailAddress}"/>
                    </f:entry>

                    <f:entry  title="Default Build Type" field="defaultBuildType">
                      <select name="defaultBuildType">
                        <j:forEach var="s" items="${instance.buildTypes}">
                          <option value="${s.id}" selected="${s.id == instance.defaultBuildType ?'true':null}">${s.description}</option>
                        </j:forEach>
                      </select>
                    </f:entry>

                    <f:entry title="Github Web Url">
                      <f:textbox name="dotci.githubWebUrl" value="${instance.githubWebUrl}"/>
                    </f:entry>

                   <f:entry title="Github Api Url">
                     <f:textbox name="dotci.githubApiUrl" value="${instance.githubApiUrl}"/>
                   </f:entry>

                   <f:entry title="Github Client ID">
                     <f:textbox name="dotci.githubClientID" value="${instance.githubClientID}"/>
                   </f:entry>

                   <f:entry title="Github Client Secret">
                     <f:textbox name="dotci.githubClientSecret" value="${instance.githubClientSecret}"/>
                   </f:entry>

                   <f:entry title="Enable private repository support">
                      <f:checkbox name="dotci.privateRepoSupport" value="${instance.privateRepoSupport}"/>
                   </f:entry>

                    <f:entry title="Github callback url">
                       <f:textbox name="dotci.githubCallbackUrl" value="${instance.githubCallbackUrl}"/>
                    </f:entry>

    </f:section>
</j:jelly>
